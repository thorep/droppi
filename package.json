{
	"name": "droppi",
	"version": "1.0.0",
	"description": "A zero dependency drag and drop library for React",
	"author": "Thor Prestboen",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/thorep/droppi"
	},
	"private": false,
	"main": "./lib/cjs/index.js",
	"module": "./lib/esm/index.js",
	"types": "./lib/esm/index.d.ts",
	"scripts": {
		"watchbuild": "watch 'yarn build' --filter='watchfilter.js'",
		"build": "yarn build:esm && yarn build:cjs",
		"build:esm": "tsc",
		"build:cjs": "tsc --module commonjs --outDir lib/cjs"
	},
	"peerDependencies": {
		"@types/react": "^18.0.21",
		"@types/react-dom": "^18.0.6",
		"react": ">=17.0.0",
		"react-dom": ">=17.0.0",
		"typescript": "^4.8.4"
	},
	"files": [
		"dist",
		"LICENSE",
		"README.md"
	],
	"keywords": [
		"kanban",
		"drag",
		"drop",
		"kanban board",
		"drag and drop",
		"agile",
		"scrum",
		"kanban app",
		"task management"
	],
	"devDependencies": {
		"@types/react": "^18.0.21",
		"@types/react-dom": "^18.0.6",
		"@typescript-eslint/eslint-plugin": "^5.40.0",
		"@typescript-eslint/parser": "^5.40.0",
		"eslint": "^8.25.0",
		"eslint-plugin-react": "^7.31.10",
		"react": "^18.2.0",
		"react-dom": "^18.2.0",
		"typescript": "^4.8.4"
	}
}
